<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell_pc.soilfertility.PredictingCrop">

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"/>

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Soil type"
            android:textColor="@android:color/background_dark" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL1"
        android:orientation="horizontal"
        android:layout_marginTop="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/TextView2"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textColor="@android:color/background_dark"
            android:layout_marginLeft="10dp"
            />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL2"
        android:orientation="horizontal"
        android:layout_marginTop="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/TextView3"
            android:layout_height="wrap_content"
            android:text="Salinity"
            android:textColor="@android:color/background_dark"
            android:layout_marginLeft="10dp"
            />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL3"
        android:orientation="horizontal"
        android:layout_marginTop="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/TextView4"
            android:layout_height="wrap_content"
            android:text="Irrigation access"
            android:textColor="@android:color/background_dark"
            android:layout_marginLeft="10dp"
            />

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL4"
        android:orientation="horizontal"
        android:layout_marginTop="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/TextView5"
            android:layout_height="wrap_content"
            android:text="Fertility"
            android:textColor="@android:color/background_dark"
            android:layout_marginLeft="10dp"
            />

        <Spinner
            android:id="@+id/spinner5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL5"
        android:orientation="horizontal"
        android:layout_marginTop="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/TextView6"
            android:layout_height="wrap_content"
            android:text="Wheather"
            android:textColor="@android:color/background_dark"
            android:layout_marginLeft="10dp"
            />

        <Spinner
            android:id="@+id/spinner6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL6"
        android:orientation="horizontal"
        android:layout_marginTop="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/TextView7"
            android:layout_height="wrap_content"
            android:text="Farmer's social condition"
            android:textColor="@android:color/background_dark"
            android:layout_marginLeft="10dp"
            />

        <Spinner
            android:id="@+id/spinner7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL7"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:layout_marginTop="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/TextView8"
            android:layout_height="wrap_content"
            android:text="Amount of irrigation"
            android:textColor="@android:color/background_dark"
            android:layout_marginLeft="10dp"
            />

        <Spinner
            android:id="@+id/spinner8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL8"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:layout_marginTop="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/TextView9"
            android:layout_height="wrap_content"
            android:text="Method of Irrigation"
            android:textColor="@android:color/background_dark"
            android:layout_marginLeft="10dp"
            />

        <Spinner
            android:id="@+id/spinner9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Submit"
        android:backgroundTint="@color/colorAccent"/>
</RelativeLayout>
